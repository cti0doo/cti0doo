<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_loan_compute_wizard" model="ir.ui.view">
            <field name="name">loan.compute.wizard.form</field>
            <field name="model">account.loan.compute.wizard</field>
            <field name="inherit_id" ref="account_loans.view_account_loan_compute_wizard"></field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='loan_term']" position="replace">
                    <field name="loan_term" class="oe_inline" style="width:70px;"/>
                    <field name="loan_term_unit" class="oe_inline" style="width:70px;"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
 